<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.employees.EmployeesAddingFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addingEmployeesNameLayout"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:errorEnabled="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        android:layout_gravity="center"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        android:background="@color/white"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_person"
            android:layout_marginTop="-38dp"
            android:layout_marginStart="8dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAddingEmployeesName"
            android:layout_width="340dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:hint="@string/name"
            android:inputType="text"
            android:paddingStart="38dp"
            android:background="@drawable/border">
        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addingEmployeesLastNameLayout"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:errorEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addingEmployeesNameLayout"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        android:layout_gravity="center"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        android:background="@color/white"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_person"
            android:layout_marginTop="-38dp"
            android:layout_marginStart="8dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAddingEmployeesLastName"
            android:layout_width="340dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:hint="@string/surname"
            android:inputType="text"
            android:paddingStart="38dp"
            android:background="@drawable/border">
        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addingEmployeesMiddleNameLayout"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:errorEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addingEmployeesLastNameLayout"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        android:layout_gravity="center"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        android:background="@color/white"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_person"
            android:layout_marginTop="-38dp"
            android:layout_marginStart="8dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAddingEmployeesMiddleName"
            android:layout_width="340dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:hint="Отчество"
            android:inputType="text"
            android:paddingStart="38dp"
            android:background="@drawable/border">
        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addingEmployeesAddressLayout"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:errorEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addingEmployeesMiddleNameLayout"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        android:layout_gravity="center"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        android:background="@color/white"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_address"
            android:layout_marginTop="-38dp"
            android:layout_marginStart="8dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAddingEmployeesAddress"
            android:layout_width="340dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:hint="Адрес"
            android:inputType="text"
            android:paddingStart="38dp"
            android:background="@drawable/border">
        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addingEmployeesEmailLayout"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:errorEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addingEmployeesAddressLayout"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        android:layout_gravity="center"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        android:background="@color/white"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_email"
            android:layout_marginTop="-38dp"
            android:layout_marginStart="8dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAddingEmployeesEmail"
            android:layout_width="340dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:hint="@string/email"
            android:inputType="text"
            android:paddingStart="38dp"
            android:background="@drawable/border">
        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addingEmployeesNumberLayout"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:errorEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addingEmployeesEmailLayout"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        android:layout_gravity="center"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        android:background="@color/white"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_phone"
            android:layout_marginTop="-38dp"
            android:layout_marginStart="8dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAddingEmployeesPhone"
            android:layout_width="340dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:hint="@string/number"
            android:inputType="text"
            android:paddingStart="38dp"
            android:background="@drawable/border">
        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addingEmployeesPasswordLayout"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:errorEnabled="true"
        app:passwordToggleEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addingEmployeesNumberLayout"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        android:layout_gravity="center"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        android:background="@color/white"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_locker"
            android:layout_marginTop="-38dp"
            android:layout_marginStart="8dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAddingEmployeesPassword"
            android:layout_width="340dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:hint="@string/password"
            android:inputType="text"
            android:paddingStart="38dp"
            android:background="@drawable/border">
        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addingEmployeePositionLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:hint="Должность"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addingEmployeesPasswordLayout">

        <AutoCompleteTextView
            android:id="@+id/actvEmployeePosition"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:inputType="none"
            app:layout_constraintStart_toStartOf="parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddEmployee"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_button"
        android:fontFamily="@font/poppins_light"
        android:text="Добавить Сотрудника"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/addingEmployeesPasswordLayout"
        app:layout_constraintStart_toStartOf="@+id/addingEmployeesPasswordLayout"
        app:layout_constraintTop_toBottomOf="@+id/addingEmployeePositionLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>