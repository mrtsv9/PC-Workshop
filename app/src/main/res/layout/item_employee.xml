<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_employees"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="12dp"
        android:text="Имя: "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEmployeeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="имечко"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@+id/tvName"
        app:layout_constraintTop_toTopOf="@+id/tvName" />

    <TextView
        android:id="@+id/tvLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Фамилия: "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tvName"
        app:layout_constraintTop_toBottomOf="@id/tvName" />

    <TextView
        android:id="@+id/tvEmployeeLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="фамилия"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/tvLastName"
        app:layout_constraintTop_toTopOf="@+id/tvLastName" />

    <TextView
        android:id="@+id/tvMiddleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Отчество: "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tvLastName"
        app:layout_constraintTop_toBottomOf="@id/tvLastName" />

    <TextView
        android:id="@+id/tvEmployeeMiddleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="отчество"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/tvMiddleName"
        app:layout_constraintTop_toTopOf="@+id/tvMiddleName" />

    <TextView
        android:id="@+id/tvEmpAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:text="Адрес: "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/tvEmployeeAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="адрес"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@+id/tvEmpAddress"
        app:layout_constraintTop_toTopOf="@+id/tvEmpAddress" />

    <TextView
        android:id="@+id/tvEmpContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Контактные данные: "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvEmpAddress"
        app:layout_constraintTop_toBottomOf="@id/tvEmpAddress" />

    <TextView
        android:id="@+id/tvEmployeeNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="номер"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvEmpContacts"
        app:layout_constraintTop_toBottomOf="@+id/tvEmpContacts" />

    <TextView
        android:id="@+id/tvEmployeeEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="почта"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvEmployeeNumber"
        app:layout_constraintTop_toBottomOf="@+id/tvEmployeeNumber" />

    <TextView
        android:id="@+id/tvEmpPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="пароль"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvEmployeeEmail"
        app:layout_constraintTop_toBottomOf="@+id/tvEmployeeEmail" />

    <TextView
        android:id="@+id/tvEmployeePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="qwerty"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@+id/tvEmpPassword"
        app:layout_constraintTop_toBottomOf="@+id/tvEmployeeEmail" />

    <TextView
        android:id="@+id/tvEmpPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Занимаемая должность: "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvEmployeeEmail"
        app:layout_constraintTop_toBottomOf="@+id/tvEmpPassword" />

    <TextView
        android:id="@+id/tvEmployeePosition"
        android:layout_width="wrap_content"
        android:maxWidth="190dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="должность22222222222"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@+id/tvEmpPosition"
        app:layout_constraintTop_toTopOf="@+id/tvEmpPosition" />

    <View
        android:background="@drawable/divider_corner"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEmployeePosition" />

</androidx.constraintlayout.widget.ConstraintLayout>