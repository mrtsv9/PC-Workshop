<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvClientName"
        android:layout_width="160dp"
        android:layout_height="20dp"
        android:textSize="16sp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvClientLastName"
        android:layout_width="160dp"
        android:layout_height="20dp"
        android:textSize="16sp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvClientEmail"
        android:layout_width="160dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/tvClientName"
        app:layout_constraintTop_toBottomOf="@+id/tvClientName" />


    <TextView
        android:id="@+id/tvClientNumber"
        android:layout_width="160dp"
        android:layout_height="20dp"
        android:textSize="16sp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvClientLastName" />

</androidx.constraintlayout.widget.ConstraintLayout>